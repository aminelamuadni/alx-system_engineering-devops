#!/usr/bin/env bash
# Script to display information about subdomains

# Function to get DNS record information
get_dns_info() {
    local domain=$1
    local subdomain=$2
    local result=$(dig +short $subdomain.$domain A)
    if [[ -n $result ]]; then
        echo "The subdomain $subdomain is a A record and points to $result"
    else
        echo "No A record found for $subdomain"
    fi
}

# Main script logic
main() {
    local domain=$1
    local subdomain=$2

    if [[ -z $domain ]]; then
        echo "Domain not provided"
        return 1
    fi

    if [[ -z $subdomain ]]; then
        # Display info for default subdomains if subdomain is not provided
        get_dns_info $domain "www"
        get_dns_info $domain "lb-01"
        get_dns_info $domain "web-01"
        get_dns_info $domain "web-02"
    else
        # Display info for provided subdomain
        get_dns_info $domain $subdomain
    fi
}

# Calling the main function with arguments
main "$@"
